{
  "name": "wms-desktop",
  "version": "1.0.0",
  "description": "WMS Desktop Application",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",
  "author": "CROCS",
  "scripts": {
    "clean": "node -e \"require('fs').rmSync('renderer/dist', {recursive:true, force:true})\"",
    "build": "node scripts/build.mjs",
    "dev": "node scripts/build.mjs --watch",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder --win",
    "dist:dir": "npm run build && electron-builder --win --dir"
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "esbuild": "^0.24.0"
  },
  "dependencies": {
    "@kyungseopk1m/holidays-kr": "^1.3.5",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.crocs.wms",
    "productName": "ESKA WMS",
    "electronVersion": "33.2.0",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "renderer/index.html",
      "renderer/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "config.json",
        "to": "config.json"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerLanguages": ["ko-KR", "en-US"],
      "language": "1042"
    }
  }
}
