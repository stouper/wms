rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {

    // Board files: images and documents (board/images/*, board/files/*)
    match /board/{type}/{fileName} {
      // 로그인한 사용자만 접근 가능
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Approval attachments: images and documents (approvals/images/*, approvals/files/*)
    match /approvals/{type}/{fileName} {
      // 로그인한 사용자만 접근 가능
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
